<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    background="@android:color/transparent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTop0f="parent"
        tools:srcCompat="@drawable/netology_original" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTop0f="@id/published"
        app:layout_constraintTop_toTop0f="@id/avatar"
        app:layout_constraintStart_toEnd0f="@id/avatar"
        android:layout_marginStart="16dp"
        android:text="@string/avatar_text" />

    <TextView
        android:id="@+id/published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:layout_constraintTop_toBottom0f="@id/author"
        app:layout_constraintStart_toEnd0f="@id/avatar"
        android:layout_marginStart="16dp"
        android:text="@string/avatar_date"
        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/baseline_more_vert_24"
        tools:layout_editor_absoluteX="354dp"
        tools:layout_editor_absoluteY="17dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>